
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>GİRİŞ YAP | OYS</h4>
                <p class="center light">ÜYE GİRİŞİ</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="uyeKullaniciAdi" name="uyeKullaniciAdi" type="text" class="validate">
                                <label for="uyeKullaniciAdi" class="active">Kullanıcı Adı</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="uyeSifre" name="uyeSifre" type="password" class="validate">
                                <label for="uyeSifre" class="active">Şifre</label>
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button id="btn_giris" type="submit" class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Giriş Yap</button>
                        </div>
                        <div class="row">
                        </div>
                        <div class="col m12 s12">
                            <a href="/Login/kayitekle" id="btn_kayitSayfasi" class="waves-effect waves-light btn">ÜYE OL</a>
                        </div>
                        @if (ViewBag.ResultMessage != null)
                        {
                            <div class="alert alert-dismissible @ViewBag.ResultMessageCss">
                                <i>@ViewBag.ResultMessage</i>
                            </div>
                        }

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

