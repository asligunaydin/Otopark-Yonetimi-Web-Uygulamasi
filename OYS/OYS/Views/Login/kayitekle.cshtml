
@{
    ViewBag.Title = "kayitekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>UYE KAYIT ALANI</h4>
                <p class="center light">Kaydınızı Tamamlayıp Hemen Giriş Yapabilirsiniz</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input  name="uyeAdi" type="text" class="validate">
                                <label for="uyeAdi" class="active">İsim</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="uyeSoyadi" type="text" class="validate">
                                <label for="uyeSoyadi"class="active">Soyisim</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">people_outline</i>
                                <input name="uyeEmail" type="email" class="validate">
                                <label for="uyeEmail" class="active">Email Adresi</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="uyeTelefon" type="number" class="validate">
                                <label for="uyeTelefon"class="active">Telefon Numarası</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input name="uyeKullaniciAdi" type="text" class="validate">
                                <label for="uyeKullaniciAdi" class="active">Kullanıcı Adı</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="uyeSifre" type="password" class="validate">
                                <label for="uyeSifre" class="active">Şifre</label>
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small red lighten-2">
                            <i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

