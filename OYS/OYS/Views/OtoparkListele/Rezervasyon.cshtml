    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4> REZERVASYON SAYFASI </h4>
                <p class="center light">Rezervasyon İşlemlerinizi Buradan Gerçekleştirebilirsiniz.</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                        </div>
                        @*using (Html.BeginForm("KisiyiGuncelle", "Home", FormMethod.Post))
