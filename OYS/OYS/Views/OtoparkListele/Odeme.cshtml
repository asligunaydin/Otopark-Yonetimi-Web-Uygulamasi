@{ ViewBag.Title = "ödemeIslemi";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>ÖDEME İŞLEMLERİ</h4>
                <p class="center light">KART BİLGİLERİ</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <input name="ad" type="text" class="validate">
                                <label for="ad" class="active">Kart Üzerindeki İsim</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="kartno" type="number" class="validate">
                                <label for="kartno" class="active">Kart Numarası</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input name="tarih" type="date" class="validate">
                                <label for="tarih" class="active">Son kullanma Tarihi</label>
                            </div>
                            <div class="input-field col s6">
                                <input name="cvv" type="number" class="validate">
                                <label for="cvv" class="active">CVV</label>
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Ödemeyi Gerçekleştir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

